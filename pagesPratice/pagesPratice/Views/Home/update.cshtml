@model pagesPratice.Models.book

<div>
    <div class="bg-info text-center text-light">
        <h1>update book's name:@Model.book_name</h1>
    </div>
    <div style="background-color:rgb(13 202 240 / 20%) " class="container">
        <div class="text-center">
            <form style="display:inline-block">
                <div class="form-group text-center" style="opacity:1">
                    <label for="exampleFormControlInput1">Name</label>
                    <input type="text" class="form-control text-center" id="exampleFormControlInput1" value="@Model.book_name" name="name">
                </div>
                <div class="form-group text-center align-content-center" style="opacity:1">
                    <label for="exampleFormControlInput2">author</label>
                    <input type="text" class="form-control text-center" id="exampleFormControlInput2" value="@Model.book_author" name="author">
                </div>
                <div class="form-group text-center" style="opacity:1">
                    <label for="exampleFormControlInput3">summary</label>
                    <input type="text" class="form-control text-center" id="exampleFormControlInput3" value="@Model.book_summary" name="p_summary">
                </div>
                <div class="form-group text-center" style="opacity:1">
                    <label for="exampleFormControlInput3">book page</label>
                    <input type="number" class="form-control text-center" id="exampleFormControlInput3" value="@Model.book_page" name="b_page">
                </div>
                <p>category</p>
                <div class="form-group text-center" style="opacity:1">
                    <select name="cat" id="cat">
                        <option value="0">comedy</option>
                        <option value="1">action</option>
                        <option value="2">horror</option>
                        <option value="3">kids</option>
                    </select>
                </div>

                <div class="form-group text-center" style="opacity:1">
                    <label for="exampleFormControlInput4">release date</label><br />
                    <input type="datetime-local" value="@Model.release_date" class="form-control text-center" id="exampleFormControlInput4" name="release_date">
                </div>
                <button type="submit" class="btn btn-primary" formaction="@Url.Action("updateAction")" formmethod="post">Submit</button>
            </form>
        </div>
    </div>
</div>